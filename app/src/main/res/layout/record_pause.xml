<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/start_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/record_hover" />

        <ImageButton
            android:id="@+id/stop_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stop_hover2" />

        <ImageButton
            android:id="@+id/start_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play_hover" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重录"
            android:id="@+id/re_start"
            />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_hover" />
    </LinearLayout>

    <Button
        android:id="@+id/avail_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看内存大小" />

    <Button
        android:id="@+id/pause_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停继续录音" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/check_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#9AFF028b" />

        <ListView
            android:id="@+id/record_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
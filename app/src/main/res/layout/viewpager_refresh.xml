<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PageAdapter刷新问题"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_simpledemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_introduce"
        android:onClick="onClick"
        android:text="简单使用"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_pageradapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_simpledemo"
        android:onClick="onClick"
        android:text="普通View做Item"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_fpageradapter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_pageradapter"
        android:onClick="onClick"
        android:text="FragmentPagerAdapter1"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_fpageradapter2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_fpageradapter1"
        android:onClick="onClick"
        android:text="FragmentPagerAdapter2"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_fspageradapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_fpageradapter2"
        android:onClick="onClick"
        android:text="FragmentStatePagerAdapter"
        android:textAllCaps="false" />

</RelativeLayout>
